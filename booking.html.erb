<head>
  <%= render 'layouts/head' %>
</head>
<body>

  <div id="container">
    <header>
        <%= render 'layouts/header' %>
    </header>
    <div>
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
    
    <footer>
      <%= render 'layouts/footer' %>
    </footer>
  </div> 
  <%= render 'layouts/lastjs' %>
</body>
</html>